<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Read property files -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath*:tafc-connection.properties</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true"/>
	</bean>

	<!-- TAFC connection configuration -->
	<bean id="tafcConfig" class="com.temenos.interaction.commands.jencks.TafcConfiguration" >
		<property name="hosts" value="${tafc.hosts}" />
		<property name="ports" value="${tafc.ports}" />
		<property name="ofsSource" value="${tafc.ofssource}" />
		<property name="allowInput" value="${tafc.allowInput}" />
		<property name="actionTimeout" value="${tafc.actionTimeout}" />
	</bean>
	
	<!-- TAFC jencks jndi container -->
	<bean id="jencksJcaContainer" class="com.temenos.interaction.commands.jencks.JencksJcaContainer" >
		<constructor-arg ref="tafcConfig" />
	</bean>
	
</beans>

